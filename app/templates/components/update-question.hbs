{{#if updateQuestion }}
  <h3>Modify {{question.author}}'s Query:</h3>
  <div>
    <form>
      <div class="form-group">
        {{input value=author id="author" placeholder=question.author}}
      </div>

      <div class="form-group">
        {{input value=title id="title" placeholder=question.title}}
      </div>

      <div class="form-group">
        {{input value=detail id="detail" placeholder=question.detail}}
      </div>
      <button {{action 'update' question}}>Save Changes</button>
    </form>
  </div>
{{else}}
  <button class="btn-default update_button" {{action 'updateQuestion'}}>Update</button>
{{/if}}
